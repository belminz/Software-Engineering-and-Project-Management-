<AnchorPane prefHeight="340.0" prefWidth="389.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.sepm.assignment.individual.restaurant.ui.AddNewProductController">
    <children>
        <Label layoutX="30.0" layoutY="43.0" text="*Name" />
        <TextField fx:id="tf_name" layoutX="127.0" layoutY="38.0" />
        <Label layoutX="20.0" layoutY="93.0" text="Description" />
        <TextField fx:id="tf_description" layoutX="127.0" layoutY="88.0" promptText="optional" />
        <Label layoutX="18.0" layoutY="140.0" text="*Netto Price" />
        <TextField fx:id="tf_nettoprice" layoutX="127.0" layoutY="135.0" />
        <Label layoutX="27.0" layoutY="194.0" text="Category" />
        <Label layoutX="40.0" layoutY="234.0" text="Tax" />
        <Label layoutX="21.0" layoutY="308.0" text="* Required fields" />
        <Button fx:id="addProduct" layoutX="137.0" layoutY="303.0" mnemonicParsing="false" onAction="#addProduct" text="Add product" />
