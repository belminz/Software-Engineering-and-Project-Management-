<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="506.0" prefWidth="562.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.sepm.assignment.individual.restaurant.ui.Statistic">
   <children>
      <BarChart fx:id="barChart" layoutX="3.0" layoutY="31.0">
        <xAxis>
          <CategoryAxis label="Products" side="BOTTOM" fx:id="xAxis" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="yAxis" label="Amount of sold products" side="LEFT" />
        </yAxis>
      </BarChart>
      <DatePicker fx:id="dp_BeginDate" layoutX="78.0" layoutY="432.0" />
      <DatePicker fx:id="dp_EndDate" layoutX="354.0" layoutY="432.0" />
      <Label layoutX="3.0" layoutY="437.0" text="Begin date" />
      <Label layoutX="289.0" layoutY="437.0" text="End date" />
      <Button fx:id="showStatisticButton" layoutX="229.0" layoutY="465.0" mnemonicParsing="false" onAction="#onShowStatisticButtonClicked" text="Show statistic" />
   </children>
</AnchorPane>
